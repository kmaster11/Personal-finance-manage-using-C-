{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Personal Finance Manager",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "src/main.cpp",
        "src/transaction.cpp",
        "src/transaction_manager.cpp",
        "-Iinclude",
        "-o",
        "bin/pfm.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Builds the Personal Finance Manager executable"
    }
  ]
}
